<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="module" client="administrator" method="upgrade">
    <name>MOD_JOOMLAID</name>
	<version>2.0.0</version>
	<creationDate>March 2014</creationDate>
	<author>Bereza Kirill</author>
	<authorEmail>takt.bereza@gmail.com</authorEmail>
	<authorUrl>http://brainstorage.me/TakT</authorUrl>
	<copyright>Copyright (C) 2008-2013 L.D.M. Co All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>MOD_JOOMLAID_DESCRIPTION</description>
	
	<files>
		<filename module="mod_joomlaid">mod_joomlaid.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
	    <folder>js</folder>
	    <folder>images</folder>
	    <folder>sql</folder>
	</files>

	<languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.mod_joomlaid.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_joomlaid.sys.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <updateservers>
        <server type="extension" priority="1" name="mod_joomlaid">http://update.ksenmart.ru/update-info/j3/pkg_ksenmart/com_ksenmart/modules/administrator/mod_joomlaid-update.xml</server>
    </updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/system/ksencore/core/models/fields">
				<field
					name="views"
					default="*"
					type="ksadminviews" 
					extension="ksenmart"
					multiple="true"
					size="7"
					label="MOD_KS_PAGES_LABEL"
					description="MOD_KS_PAGES_DESC" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>	
	</config>
</extension>