<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
    <name>MOD_KM_FILTER</name>
    <version>2.0</version>
    <creationDate>March 2014</creationDate>
    <description>MOD_KM_FILTER_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_km_filter">mod_km_filter.php</filename>
		<filename>mod_km_filter.js</filename>
        <filename>mod_km_filter.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>css</folder>
        <folder>sql</folder>
    </files>
    <languages folder="language">
        <language tag="ru-RU">ru-RU.mod_km_filter.ini</language>
        <language tag="ru-RU">ru-RU.mod_km_filter.sys.ini</language>
    </languages>
	
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="layout" type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field name="moduleclass_sfx" type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field name="cache" type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                        <option value="1">JGLOBAL_USE_GLOBAL</option>
                        <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field name="cache_time" type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode"
                        type="hidden"
                        default="static">
                        <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>