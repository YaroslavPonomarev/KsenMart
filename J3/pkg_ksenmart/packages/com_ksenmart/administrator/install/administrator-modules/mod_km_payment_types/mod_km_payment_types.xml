	<description>MOD_KM_PAYMENT_TYPES_DESCRIPTION</description>
	<files>
		<filename module="mod_km_payment_types">mod_km_payment_types.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.mod_km_payment_types.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_km_payment_types.sys.ini</language>
    </languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="views"
					default="shipping"
					type="kmadminviews"
					multiple="true"
					size="7"
					label="MOD_KM_PAYMENT_TYPES_VIEWS_LABEL"
					description="MOD_KM_PAYMENT_TYPES_VIEWS_DESC" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>	
	</config>
</extension>